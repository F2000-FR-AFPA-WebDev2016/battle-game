{% extends "AfpaBattleGameBundle::layout.html.twig" %}

{% block body %}
    <style>
        table {text-align: center;border-collapse: collapse;}
        td {
            border:1px solid black;
            background-color: #c6c3bd;
            width:25px;min-width:25px;
            height:25px;min-height:25px;

        }

        #boards {width:800px; margin: 50px auto ;text-align: center;}



        .board_pieces  {

            display: inline-block;
        }
        .board_shoot  {
            margin-left: 25px;
            display: inline-block;
        }
    </style>

    <div id="boards">
        <table class="board_pieces">
            {% for x in 0.. board_pieces1|length -1 %}
                <tr>
                    {% for y in 0..board_pieces1[x]|length-1 %}
                        <td id="L{{ x }}C{{ y }}" data-x="{{ x }}" data-y = "{{ y }}">
                            {{ board_pieces1[x][y] }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>

        <table class="board_shoot">
            {% for x in 0.. board_shoot1|length -1 %}
                <tr>
                    {% for y in 0..board_shoot1[x]|length-1 %}
                        <td id="L{{ x }}C{{ y }}" data-x="{{ x }}" data-y = "{{ y }}">
                            {{ board_shoot1[x][y] }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>

        <br />

        <table class="board_pieces">
            {% for x in 0.. board_pieces2|length -1 %}
                <tr>
                    {% for y in 0..board_pieces2[x]|length-1 %}
                        <td id="L{{ x }}C{{ y }}" data-x="{{ x }}" data-y = "{{ y }}">
                            {{ board_pieces2[x][y] }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>

        <table class="board_shoot">
            {% for x in 0.. board_shoot2|length -1 %}
                <tr>
                    {% for y in 0..board_shoot2[x]|length-1 %}
                        <td id="L{{ x }}C{{ y }}" data-x="{{ x }}" data-y = "{{ y }}">
                            {{ board_shoot2[x][y] }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}