        <label > {{'Game Room'}}</label>
    </div>


    <h1>Liste des parties</h1>
    <a href="{{ path('game_create')}}" ><input class="createGame" type="button" value="CrÃ©er une nouvelle partie"></a><br><br>

    <table class="listgame">
        {% for game in games %}

