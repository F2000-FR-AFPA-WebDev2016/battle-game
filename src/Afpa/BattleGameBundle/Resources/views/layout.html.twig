        {% endblock %}
        <footer>
            <nav>
                <ul>
                    <li>2016 @copyright</li>
                    <li>Qui sommes-nous ?</li>
                    <li><a href="contact.php">Contact</a></li>
                    <li><a href="https://fr.wikipedia.org/wiki/Bataille_navale_%28jeu%29">Règles</a></li>
                </ul>
            </nav>
        </footer>


    {% block javascripts %}{% endblock %}
</body>
</html>
